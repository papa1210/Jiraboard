generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  PLANNED
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
  BLOCKED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum ResourceStatus {
  ON_DUTY
  OFF_DUTY
}

enum ResourceRole {
  SUPV
  ENG
}

enum Site {
  PQP_HT
  MT1
}

model DailyHeadcount {
  id           Int      @id @default(autoincrement())
  date         DateTime @db.Date
  site         Site
  onDutyCount  Int
  createdAt    DateTime @default(now())

  @@unique([site, date], name: "daily_headcount_site_date")
}

model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  passwordHash  String
  isAdmin       Boolean        @default(false)
  role          ResourceRole   @default(ENG)
  status        ResourceStatus @default(ON_DUTY)
  site          Site           @default(PQP_HT)
  ownedProjects Project[]      @relation("ProjectOwner")
  tasksCreated  Task[]         @relation("TaskCreator")
  tasksAssigned Task[]         @relation("TaskAssignee")
  comments      Comment[]
  actualLogs    TaskActualLog[] @relation("ActualLogCreatedBy")
  scopeLogs     TaskScopeLog[]  @relation("ScopeLogCreatedBy")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Project {
  id          Int           @id @default(autoincrement())
  name        String
  key         String        @unique
  description String?
  status      ProjectStatus @default(PLANNED)
  ownerId     Int
  owner       User          @relation("ProjectOwner", fields: [ownerId], references: [id])
  tasks       Task[]
  sprints     Sprint[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Task {
  id                 Int             @id @default(autoincrement())
  title              String
  description        String?
  status             TaskStatus      @default(TODO)
  priority           TaskPriority    @default(MEDIUM)
  startDate          DateTime?
  completeDate       DateTime?
  completionPercent  Int             @default(0)
  notes              String?
  assignedResourceIds String[]       @default([])
  estimatedHours     Int             @default(0)
  actualHours        Int             @default(0)
  projectId          Int
  project            Project         @relation(fields: [projectId], references: [id])
  createdById        Int
  createdBy          User            @relation("TaskCreator", fields: [createdById], references: [id])
  assigneeId         Int?
  assignee           User?           @relation("TaskAssignee", fields: [assigneeId], references: [id])
  orderIndex         Int             @default(0)
  dueDate            DateTime?
  sprintId           Int?
  sprint             Sprint?         @relation(fields: [sprintId], references: [id])
  comments           Comment[]
  actualLogs         TaskActualLog[]
  scopeLogs          TaskScopeLog[]
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
}

model Comment {
  id        Int      @id @default(autoincrement())
  body      String
  taskId    Int
  task      Task     @relation(fields: [taskId], references: [id])
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sprint {
  id        Int      @id @default(autoincrement())
  name      String
  startDate DateTime?
  endDate   DateTime?
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TaskActualLog {
  id        Int      @id @default(autoincrement())
  taskId    Int
  date      DateTime @db.Date
  hours     Int      @default(0)
  createdById Int?
  createdAt DateTime @default(now())

  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdBy User?    @relation("ActualLogCreatedBy", fields: [createdById], references: [id])

  @@unique([taskId, date], name: "task_actual_log_task_date")
}

model TaskScopeLog {
  id          Int      @id @default(autoincrement())
  taskId      Int
  date        DateTime @db.Date
  deltaHours  Int      @default(0)
  createdById Int?
  createdAt   DateTime @default(now())

  task       Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdBy  User?   @relation("ScopeLogCreatedBy", fields: [createdById], references: [id])
}

model PermissionSetting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
